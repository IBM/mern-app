{
  "name": "mernexample",
  "version": "1.0.0",
  "description": "A generated IBM Cloud application",
  "private": true,
  "engines": {
    "node": "^8.11.1"
  },
  "scripts": {
    "start": "node server/server.js",
    "debug": "nf --procfile Procfile-debug --port 3000 start",
    "test": "nyc mocha",
    "dev": "nf --procfile Procfile-dev --port 3000 start",
    "build": "webpack --progress --config webpack.prod.js",
    "postinstall": "npm run build",
    "lint": "eslint src",
    "client-reload": "webpack-dev-server --host 0.0.0.0  --history-api-fallback --progress --inline --config webpack.dev-standalone.js",
    "server-reload": "nodemon server/server.js"
  },
  "nodemonConfig": {
    "env": {
      "NODE_HEAPDUMP_OPTIONS": "nosignal"
    }
  },
  "dependencies": {
    "appmetrics-dash": "^4.0.0",
    "appmetrics-prometheus": "^2.0.0",
    "appmetrics-zipkin": "^1.0.4",
    "body-parser": "^1.17.1",
    "express": "^4.15.3",
    "log4js": "^3.0.5",
    "ibm-cloud-env": "^0",
    "mongoose": "^4.9.8",
    "connect-mongo": "^1.3.2",
    "express-session": "^1.15.2"
  },
  "devDependencies": {
    "nodemon": "^1.12.1",
    "chai": "^4.0.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "css-loader": "^0.28.7",
    "node-sass": "^4.8.3",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.21.0",
    "webpack": "^4.6.0",
    "webpack-cli": "^3.1.1",
    "webpack-dev-server": "^3.1.3",
    "babel-preset-react": "^6.23.0",
    "foreman": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "copy-webpack-plugin": "^4.5.1",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "uglifyjs-webpack-plugin": "^1.0.1",
    "webpack-merge": "^4.1.1"
  }
}
